{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type" : "object",
    "properties" : {
        "properties" : {
            "type": "object",
            "properties" : {
                "name" : {"type" : "string", "minLength" : 3}
            },
            "patternProperties" : {
                "^[a-z][a-zA-Z]+$" : {"type" : "string"}
            },
            "required": ["name"],
            "additionalProperties": false
        },
        "record": {
            "type": "object",
            "properties": {
                "id" : {"type" : "string"},
                "table" : { "enum" :[
                    "customers", "invoices", 
                    "links","eWires", "agents",
                    "third parties", "wires"
                ]}
        },
        "additionalProperties": false,
        "required" : ["id"],
        "additionalProperties": false
      },
      "screenList" : {"type" : "string"},
      "screenType" : {"enum" : ["SL", "PEP", ""]}
    },
    "required" : ["properties"],
    
    "not" : {"required": ["screenList", "screenType"]},
    "additionalProperties": false
}